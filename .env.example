# --- Server ---
# Render injects PORT automatically, but you can set a default for local dev
PORT=3004

# JSON Web Token
JWT_SECRET=change-me-please
JWT_ISSUER=store-backend
JWT_EXPIRES_IN=1h

# --- Supabase ---
# Provide at least SUPABASE_URL and one of the keys below
SUPABASE_URL=
# Prefer service role on server-side (bypasses RLS where appropriate)
SUPABASE_SERVICE_ROLE_KEY=
# Or use anon key if you must
SUPABASE_ANON_KEY=

# Name of users table and columns (defaults shown)
SUPABASE_USERS_TABLE=users
SUPABASE_USERS_USERNAME_COLUMN=user_name
SUPABASE_USERS_PASSWORD_COLUMN=password
SUPABASE_USERS_EMPLOYEE_ID_COLUMN=employee_id

# --- Oracle ---
# Must be reachable from Render (public host/port). Do not use localhost
ORACLE_USER=
ORACLE_PASSWORD=
ORACLE_CONNECTION_STRING=host:1521/serviceName

# Optional: create an SSH tunnel from the app to reach Oracle privately
# Enable and set SSH to a host you can reach publicly (e.g., your ERP box)
ORACLE_SSH_TUNNEL_ENABLED=false
ORACLE_SSH_HOST=
ORACLE_SSH_PORT=22
ORACLE_SSH_USERNAME=
ORACLE_SSH_PASSWORD=
# Or provide a base64-encoded private key instead of password
ORACLE_SSH_PRIVATE_KEY=
# Tunnel mapping: localPort -> dstHost:dstPort on the SSH server
ORACLE_TUNNEL_LOCAL_PORT=15210
ORACLE_TUNNEL_DST_HOST=localhost
ORACLE_TUNNEL_DST_PORT=1521

# Connection timeout (seconds)
ORACLE_CONNECT_TIMEOUT=10

